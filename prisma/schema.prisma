generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Document {
  id String @id @default(uuid())
  userId String
  userName String
  fileName String
  fileSize Int
  fileKey String
  createdAt DateTime @default(now())

  @@index([userId])
}
